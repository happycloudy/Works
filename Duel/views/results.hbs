  <button class="btn dropdown-toggle yearset" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
  </button>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
    <form action="/year2019" method="post">
        <button type="submit" class="dropdown-item" href="#">2019</button>
    </form>
    <form action="/year2018" method="post">
        <button type="submit" class="dropdown-item" href="#">2018</button type="submit">
    </form>
  </div>
